<Window x:Name="frmAddMeal" x:Class="MemmbersMeals.PL.AddMeal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemmbersMeals.PL"
        mc:Ignorable="d"
        Title="Add Meal" Height="195.5" Width="244.5" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Icon="addMeal.png">
    <Grid Margin="0,0,4,-1">

        <Label x:Name="lblMealType" Content="Type" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label x:Name="lblPrice" Content="Price" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label x:Name="lblDate" Content="Date" HorizontalAlignment="Left" Margin="11,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.003,0.378"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Height="24" Margin="62,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Grid.Row="1" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cmbMealType" HorizontalAlignment="Left" Margin="62,9,0,0" VerticalAlignment="Top" Width="148" Grid.Row="1" Grid.ColumnSpan="2"/>
        <DatePicker x:Name="datpicMeal" HorizontalAlignment="Left" Margin="62,87,0,0" VerticalAlignment="Top" Width="148"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="87,128,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
